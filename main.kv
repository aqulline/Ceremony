#:import sm kivy.uix.screenmanager
ScreenManager:
    id:manager
    transition:sm.FadeTransition(duration=.0)
    MDScreen:
        name:"home"
        md_bg_color:"#F8F0E9"
        MDBottomNavigation:
            id:bnav
            panel_color:"#CB997E"
            selected_color_background: "#EDDCD2"
            text_color_active: "#0B4F6C"
            MDBottomNavigationItem:
                name: 'home'
                text: 'Home'
                icon: 'home'
                FloatLayout:
					Carry:
						pos_hint:{'center_x':.5, 'center_y':.8}
						FloatLayout:
							MDLabel:
				                text:"Net Earnings"
				                halign:"center"
				                font_size:"15sp"
				                pos_hint:{'center_x':.15, 'center_y':.89}
			                MDLabel:
				                text:"TZS" + " " + app.net_earnings
				                halign:"left"
				                font_size:"25sp"
				                pos_hint:{'center_x':.55, 'center_y':.78}
			                Display:
			                    name:"Total SMS"
			                    number:app.total_sms + " " + "SMS"
								pos_hint:{"center_x":.25, "center_y":.56}
							Display:
								name:"Total Buyers"
			                    number:app.total_buyers+" " + "Buyers"
								pos_hint:{"center_x":.75, "center_y":.56}
							Display:
								name:"Today Transaction"
			                    number:app.today_transactions
			                    posx:.43
								pos_hint:{"center_x":.25, "center_y":.24}
							Display:
								name:"Today Earnings"
			                    number:"TZS" + " " + app.total_earnings
			                    posx:.38
								pos_hint:{"center_x":.75, "center_y":.24}
					MDLabel:
						text:"Buyers"
						halign:"center"
						font_size:"26sp"
						theme_text_color: "Custom"
                        text_color:"gray"
						pos_hint:{"center_x":.15, "center_y":.5}
					MDCard:
						size_hint:None, None
						md_bg_color:"#DDBEA9"
						size:dp(170),dp(90)
						elevation:2
						orientation:"vertical"
						pos_hint:{"center_x":.25, "center_y":.35}
						FloatLayout:
							MDIcon:
								icon:"account-reactivate"
								pos_hint:{'center_x':.23, 'center_y':.5}
								font_size:"35sp"
							MDLabel:
								text:"Recent"
								halign:"center"
								font_size:"21sp"
								pos_hint:{'center_x':.6, 'center_y':.5}
					MDCard:
						size_hint:None, None
						md_bg_color:"#DDBEA9"
						size:dp(170),dp(90)
						elevation:2
						orientation:"vertical"
						pos_hint:{"center_x":.75, "center_y":.35}
						FloatLayout:
							MDIcon:
								icon:"account-heart"
								pos_hint:{'center_x':.23, 'center_y':.5}
								font_size:"35sp"
							MDLabel:
								text:"Special's"
								halign:"center"
								font_size:"21sp"
								pos_hint:{'center_x':.6, 'center_y':.5}

            MDBottomNavigationItem:
                name: 'notify'
                text: 'Notify'
                icon: 'bell-ring'
				MDTopAppBar:
                    title: "Notify"
                    elevation: 1
                    pos_hint: {"top": 1}
                    md_bg_color: "#D5BDAF"
                    specific_text_color: "#4a4939"

            MDBottomNavigationItem:
                name: 'buyers'
                text: 'Buyers'
                icon: 'account-group'
                MDBoxLayout:
                    id:buys
                    orientation:"vertical"
	                MDTopAppBar:
	                    title: "Buyers"
	                    elevation: 1
	                    pos_hint: {"top": 1}
	                    md_bg_color: "#D5BDAF"
	                    specific_text_color: "#4a4939"
	                    right_action_items: [["pencil", lambda x: app.callback()],["contacts", lambda x: app.add_contacts()]]
                    RecycleView:
			            id:buyer
			            key_viewclass: 'viewclass'
			            key_size: 'height'
			            RecycleBoxLayout:
			                id:wali
			                spacing:dp(10)
			                padding: dp(10)
			                default_size: None, dp(70)
			                default_size_hint: 1, None
			                size_hint_y: None
			                height: self.minimum_height
			                orientation:"vertical"

            MDBottomNavigationItem:
                name: 'account'
                text: 'Account'
                icon: 'account'
    MDScreen:
        name:"contacts"
        MDBoxLayout:
            orientation:"vertical"
            spacing:dp("10")
            MDTopAppBar:
	            title: "contacts"
	            elevation: 1
	            pos_hint: {"top": 1}
	            md_bg_color: "#D5BDAF"
	            specific_text_color: "#4a4939"
	            right_action_items: [["account-plus", lambda x: app.add_from_contact()]]
			MDLabel:
				text:"Selected("+app.contact_count+")"
				halign:"center"
				size_hint_y:None
				height: self.texture_size[1]
	            width: self.texture_size[1]
            RecycleView:
	            id: contact
	            key_viewclass: 'viewclass'
	            key_size: 'height'
	            RecycleBoxLayout:
	                id:wali
	                spacing:dp(10)
	                padding: dp(10)
	                default_size: None, dp(70)
	                default_size_hint: 1, None
	                size_hint_y: None
	                height: self.minimum_height
	                orientation:"vertical"


<Contacts>:
	text: root.name
	secondary_text: root.phone
	ImageLeftWidget:
	    source:root.image
	RightCheckbox:
		id: lcb
		on_press:
			root.state_changed()
			app.action(self, root.phone, root.name)
        state: 'down' if root.selected else 'normal'


<Carry@MDBoxLayout>:
	md_bg_color:"#EDDCD2"
	orientation:"vertical"
	radius:14
	height:"10"
	size_hint:None, None
	#size:dp(405),dp(290)
	size:dp(app.size_x),dp(app.size_y/2.5)
	#adaptive_height:True

<Display@MDBoxLayout>:
	md_bg_color:"#DDBEA9"
	orientation:"vertical"
	radius:15
	#adaptive_height:True
	size_hint:None, None
	size:dp(190),dp(70)
	posx:.3
	name:""
	number:""
	FloatLayout:
		MDLabel:
			text:root.name
			halign:"center"
			font_size:"17sp"
			pos_hint:{'center_x':root.posx, 'center_y':.7}
		MDLabel:
			text:root.number
			halign:"left"
			font_size:"23sp"
			pos_hint:{'center_x':.6, 'center_y':.3}

<Buyers>:
	text: root.name
	secondary_text: root.phone
	ImageLeftWidget:
	    source:root.image